{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://awf.dev/schemas/asp/1.0/manifest.json",
  "title": "ASP Agent Manifest",
  "description": "Agent State Protocol v1.0 Manifest Schema",
  "type": "object",
  "required": ["asp_version", "id", "name", "version", "capabilities", "requirements", "trust"],
  "properties": {
    "asp_version": {
      "type": "string",
      "pattern": "^[0-9]+\.[0-9]+$",
      "description": "ASP specification version"
    },
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Globally unique agent identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[a-z0-9][a-z0-9-_/]*[a-z0-9]$",
      "description": "Human-readable agent name"
    },
    "version": {
      "type": "string",
      "description": "Semantic version"
    },
    "capabilities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["capability_id", "description", "input_schema", "output_schema"],
        "properties": {
          "capability_id": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$"
          },
          "description": {
            "type": "string",
            "minLength": 10,
            "maxLength": 500
          },
          "input_schema": {
            "type": "object"
          },
          "output_schema": {
            "type": "object"
          },
          "idempotent": {
            "type": "boolean",
            "default": false
          },
          "estimated_latency_ms": {
            "type": "integer",
            "minimum": 0
          },
          "estimated_cost_usd": {
            "type": "number",
            "minimum": 0
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    },
    "requirements": {
      "type": "object",
      "required": ["runtime", "min_memory_mb", "timeout_seconds"],
      "properties": {
        "runtime": {
          "type": "string",
          "enum": ["python", "node", "container", "wasm", "remote"]
        },
        "min_memory_mb": {
          "type": "integer",
          "minimum": 64
        },
        "timeout_seconds": {
          "type": "integer",
          "minimum": 1,
          "maximum": 3600
        },
        "gpu_required": {
          "type": "boolean",
          "default": false
        },
        "network_required": {
          "type": "boolean",
          "default": true
        },
        "secrets": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "trust": {
      "type": "object",
      "required": ["publisher", "audit_status", "permissions"],
      "properties": {
        "publisher": {
          "type": "string",
          "minLength": 1
        },
        "signature": {
          "type": "string"
        },
        "audit_status": {
          "type": "string",
          "enum": ["unaudited", "community", "verified", "certified"]
        },
        "permissions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "NETWORK_NONE", "NETWORK_LLM_PROVIDERS", "NETWORK_ALLOW_LIST", "NETWORK_UNRESTRICTED",
              "FS_NONE", "FS_READ_WORKSPACE", "FS_WRITE_WORKSPACE", "FS_READ_SYSTEM",
              "SECRETS_NONE", "SECRETS_OWN", "SECRETS_WORKFLOW",
              "EXEC_CODE", "EXEC_SHELL", "EXEC_SUBPROCESS",
              "AGENT_RECEIVE", "AGENT_SEND", "AGENT_DELEGATE"
            ]
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "maxLength": 5000
        },
        "homepage": {
          "type": "string",
          "format": "uri"
        },
        "repository": {
          "type": "string",
          "format": "uri"
        },
        "license": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
